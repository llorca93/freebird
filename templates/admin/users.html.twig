{% block title %}admin_users{% endblock %}

{% block body %}
<div>
    <h2 class="pb-5">Liste des utilisateurs</h2>
    <table class="table table-bordered table-dark text-center table-hover table-sm">
        <thead>
            <tr>
                <th>N°</th>
                <th>Civilité</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Adresse</th>
