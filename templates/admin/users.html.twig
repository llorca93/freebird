                <th>Code postal</th>
                <th>Date de naissance</th>
                <th>Roles</th>
                <th>Actions</t&h>
            </tr>
        </thead>
        <tbody>
            {% for customer in customers %}
                <tr>
                    <td class="align-middle">{{ loop.index }}</td>
                    <td class="align-middle">{{ customer.gender }}</td>
                    <td class="align-middle">{{ customer.lastName }}</td>
                    <td class="align-middle">{{ customer.firstName }}</td>
                    <td class="align-middle">{{ customer.email }}</td>
                    <td class="align-middle">{{ customer.address }}</td>
                    <td class="align-middle">{{ customer.city }}</td>
                    <td class="align-middle">{{ customer.ZipCode }}</td>
                    <td class="align-middle">{{ customer.dob.format('d/m/Y')}}</td>
                    <td class="align-middle">{{ customer.roles|join (' + ')|lower }}</td>
                    </td>
                    <td>
                        <a href="{{ path('admin_user_update', {'id':customer.id}) }}"><i class="fas fa-user-edit"></i></a>
                        <a href="{{ path('admin_user_delete', {'id':customer.id}) }}"><i data-toggle="modal" data-target="#exampleModal"class="fas fa-trash"></i></a>
                     </td>
                </tr>
            {% endfor %}
