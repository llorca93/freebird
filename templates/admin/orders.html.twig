{% extends 'baseAdmin.html.twig' %}

{% block title %}admin_orders{% endblock %}

{% block body %} 

<div>
  <h1 class="pb-5">Liste des commandes</h1>

  <table class="table table-bordered table-dark text-center table-hover table-sm">
      <thead>
          <tr>
              <th>N°</th>
              <th>Client</th>
              <th>Produit commandé</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
          {% for order in orders %}
              <tr>
                  <td class="align-middle">{{ loop.index }}</td>
                  <td class="align-middle">{{ order.user }}</td>
                  <td class="align-middle">{{ order.productOrders }}</td>
                  <td class="align-middle">
                      <a href=""><i class="fas fa-pen-square"></i></a>
                      <a href=""><i class="fas fa-trash-alt"></i></a>
                  </td>
              </tr>
          {% endfor %}
      </tbody>
  </table>
  <div class="text-right my-5">
      <a href="" class="btn btn-outline-dark">Ajouter une commande</a>
  </div>
</div>
{% endblock %}

