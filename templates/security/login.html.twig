{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
   <link rel="stylesheet" href="{{ asset('css/styleLogin.css')}}">
{% endblock %}

{% block body %}
<main>
    
    {% for message in app.flashes('success_register') %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}
   
    {% for message in app.flashes('success_verify_email') %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}
  

    <form method="post">
        <div class="container">   
            <div class="row">        
                <div class="col-md-6 mb-4">
                    <div class="card">
                        {% if error %}
                           <div class="alert alert-danger text-center">Votre email ou votre mot de passe n'est pas correct, veuillez resaisir à nouveau</div>
                        {% endif %}
                        <div class="card-body">
                            <h3 class="text-center default-text py-3">Connexion </h3>
                           <div class="md-form"> 
                                <!-- <label for="email">Email</label> -->
                                <input type="email" value="{{ last_username }}" name="email" id="email"  class="form-control" placeholder="Email" required>
                            </div>   
                            
                            <div class="md-form">
                                <!-- <label for="password">Mot de passe </label> -->
                                <input type="password" name="password" id="password" class="form-control" placeholder="Mot de passe" required>
                            </div>  
                            
                            <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}">
                            <div class="text-center">
                                <button  class="btn btn-default waves-effect waves-light" type="submit">Valider</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    
    <div class="redirect">
        <p>Ou s'inscrire si vous êtes nouveau ici!</p> 
        <a class="btn" href="{{ path('app_register') }}"> Inscription</a>
    </div>
</main>
{% endblock %}
