{% extends 'base.html.twig' %}

{% block title %}home page{% endblock %}

{% block body %}
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100 h-100" src="{{ asset('images/products/para1-1.jpg') }}"  data-slide-to="0"  alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 h-100" src="{{ asset('images/products/para1-2.jpg') }}"   data-slide-to="1" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 h-50" src="{{ asset('images/products/para1-3.jpg') }}" data-slide-to="2"  alt="Third slide">
      </div>
    </div>
  </div>

<main>
  <div class="row">
    <div class="col-12">
        <h2 class="text-center p-3">Bienvenue sur notre boutique école Freebird</h2>
    </div>
</div>
<div class="row bg-light">
  <div class="col-12">
      <h2 class="text-center p-3">Nos derniers articles</h2>
  </div>
</div>
  <div class="row bg-light">
    {% for product in products %}
      {% if loop.index <= 3 %}
      <div class="col-sm-6 col-md-4 p-5">
        <div class="thumbnail">
          <img src="{{ asset('images/products/' ~ product.img1) }}" alt="" class="img-thumbnail">
          <div class="price">{{ product.price|number_format(0, ',', ' ') }} €</div>
          <div class="caption">
            <h4 class="text-center p-2">{{ product.name }}</h4>
            <p class="text-center">{{ product.description }}</p>
            <div class="col-12 d-flex justify-content-between detail">
              <a href="{{ path('product', {'id':product.id}) }}" class="btn btn-order" role="button"><span><i class="fas fa-eye"></i></span> Voir l'article</a>
              <a href="{{ path('cart_add', {'id':product.id}) }}" class="btn btn-order" role="button"><span><i class="fas fa-shopping-cart"></i></span> Ajouter au panier</a>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="row">
    <div class="col-12">
        <h2 class="text-center p-3">Nos prestations</h2>
    </div>
</div>
  <div class="row">
    {% for stage in stages %}
    {% if loop.index <= 1 %}
      <div class="col-sm-6 col-md-6 p-5">
        <div class="thumbnail">
          <img src="{{ asset('images/products/' ~ stage.img1) }}" alt="" class="img-thumbnail">
          <div class="price">{{ stage.price|number_format(0, ',', ' ') }} €</div>
          <div class="caption">
            <h4 class="text-center p-2">{{ stage.name }}</h4>
            <p class="text-center">{{ stage.description }}</p>
            <div class="col-12 d-flex justify-content-between detail">
              <a href="{{ path('product', {'id':stage.id}) }}" class="btn btn-order" role="button"><span><i class="fas fa-eye"></i></span> Voir l'article</a>
              <a href="{{ path('cart_add', {'id':stage.id}) }}" class="btn btn-order" role="button"><span><i class="fas fa-shopping-cart"></i></span> Ajouter au panier</a>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
    {% endfor %}
    {% for bapteme in baptemes %}
    {% if loop.index <= 1 %}
      <div class="col-sm-6 col-md-6 p-5">
        <div class="thumbnail">
          <img src="{{ asset('images/products/' ~ bapteme.img1) }}" alt="" class="img-thumbnail">
          <div class="price">{{ bapteme.price|number_format(0, ',', ' ') }} €</div>
          <div class="caption">
            <h4 class="text-center p-2">{{ bapteme.name }}</h4>
            <p class="text-center">{{ bapteme.description }}</p>
            <div class="col-12 d-flex justify-content-between detail">
              <a href="{{ path('product', {'id':bapteme.id}) }}" class="btn btn-order" role="button"><span><i class="fas fa-eye"></i></span> Voir l'article</a>
              <a href="{{ path('cart_add', {'id':bapteme.id}) }}" class="btn btn-order" role="button"><span><i class="fas fa-shopping-cart"></i></span> Ajouter au panier</a>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="row bg-light">
    <div class="col-12">
        <h2 class="text-center p-3">Nos partenaires</h2>
    </div>
</div>

<div class="row bg-light">
  <div class="col-12 offset-1 d-flex justify-content-around p-4">
    <div class="col-3 p-4">
      <img class="w-50" src="{{ asset('images/partenaires/logoFFVL.png') }}" alt="ffvl">
    </div>
    <div class="col-3 p-4">
      <img class="w-50" src="{{ asset('images/partenaires/niviuk.png') }}" alt="niviuk logo">
    </div>
    <div class="col-3 p-4">
      <img class="w-50" src="{{ asset('images/partenaires/logoEFVL.png') }}" alt="efvl">
    </div>
    <div class="col-3 p-4">
      <img class="w-50" src="{{ asset('images/partenaires/ozone-logo.png') }}" alt="ozone logo">
    </div>
  </div>
</div>



</main>

{% endblock %}
