{% extends 'base.html.twig' %}

{% block title %}Hello ShopController!{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">Boutique</h1>
    </div>
</div>
<div class="container d-flex">
    <div class="col-4">
        <div class="card card-body">
            <h5 class="card-title" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Categorie</h5>
            <div class="form-group">
                <input type="text" class="form-control" id="floatingInput" placeholder="Rechercher">                
            </div>
            <div class="collapsed" id="collapseExample">
                <ul class="list-unstyled">
                    {% for category in categories %}
                    <li>{{category.name}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-8">
        {% for i in 0..10 %}
            <div class="border rounded card-article my-2">
            
            <div>
                <div class="col-3">
                    <img src="https://media.smartbox.com/pim/1000000407607869960064.jpg?thumbor=640x0" class="card-img-top img-fluid" alt="...">
                </div>
                
                <div class="col-6">
                    <h5 class="card-title">Nom  de l'article</h5>
                    <p class="text-wrap text-truncate">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
                <div class="col-3 border-left align-items-center d-flex flex-column">
                    <button href="#" class="btn btn-primary my-1">DÃ©tails</button>
                    <button href="#" class="btn btn-warning my-1">Ajouter au panier</button>
                </div>
            </div>
            
        </div>
        {% endfor %}
        
    </div>
</div>
