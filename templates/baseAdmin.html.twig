<!DOCTYPE html>
   <head>
       <meta charset="UTF-8">
       <meta name="viewport" content="width=device-width, initial-scaler=1.0">
       <meta name="author" content="Djibril, Pierre, Sabrina, Alexandre">
       <meta name="description" content="Site E-commerce">
       <title>FreeBird {% block title %}{% endblock %}</title>
       <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
       <link rel="stylesheet" href="{{ asset('css/styleAdmin.css') }}">
       {% block stylesheets %}{% endblock %}
      
   </head>

   <body>
        <header class="container-fluid">
            <div class="row">
            <a class="col-2"  href="/">
                <img src="{{ asset('images/logo/logo.png')}}" alt="">
            </a>
            <h2 class="col-10 text-center">Espace administrateur du site FreeBird </h2></div>
        </header>

        <main class="container-fluid">            
            <div class="row">
                <nav class="col-2">
                    <ul>
                       <li ><a href="{{ path('admin')}}"><i class="fas fa-laptop"></i>Accueil</a></li>

                       <li> <a href="{{ path('admin_product')}}"><i class="fas fa-store"></i>Produits</a></li>

                       {% if is_granted ('ROLE_SUPER_ADMIN') %}
                           <li><a href="{{ path('admin_users')}}"><i class="fas fa-users"></i>Clients</a></li>
                        {% endif %}

                       <li><a href="{{ path('admin_orders') }}"> <i class="fas fa-cube"></i>Commandes</a></li>
                       
                       <li><a href="{{ path('admin_categories') }}"> <i class="fas fa-cube"></i>Categories</a></li>

                       <li><a href="{{ path('app_logout')}}"><i class="fas fa-running"></i>Déconnexion</a></li>
                    </ul>
                </nav>
                <div class="col-10 p-5">
                    <div class="col-11 p-5">
                        {% for label, messages in app.flashes %}
                          {% for message in messages %}
                          <div class="flash-{{ label }} bg-{{ label }} text-light p3 mb-3 rounded">{{message}}</div>
                          {% endfor %}
                        {% endfor %}
                      </div>
                   {% block body %}{% endblock %} 
                </div>
            </div>           
            
        </main>

        <footer>
            <div class="col-12 text-center">
                <p > <a href="#"> Mentions légales-</a> <a href="#">CGV- </a> <a href="#">CGU</a> <a href="#">- Politiques de confidentialités </a></p>
                <p>Copyright © 2021-Freebird</p>
            </div>
        </footer>



        <script   src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js "></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js "></script>
        <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js"></script>
        <script>
            $(document).ready(function(){
            bsCustomFileInput.init()
            })
         </script>


        {% block javascripts %}   {% endblock %}
   </body>